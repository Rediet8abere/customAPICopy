<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/books/new" method="post">
      <legend>New Book</legend>
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" name="title" class="form-control" id="book-title" placeholder="Title">
      </div>
      <div class="form-group">
        <label for="post-title">Author</label>
        <input type="text" name="author" class="form-control" id="book-author" placeholder="Author">
      </div>
      <div class="form-group">
        <label for="post-url">Url</label>
        <input type="url" name="url" class="form-control" id="book-url" placeholder="https://www.google.com">
      </div>
      <div class="form-group">
        <label for="post-summary">Summary</label>
        <textarea name="summary" class="form-control" id="book-summary" placeholder="Summary"></textarea>
      </div>
      <div class='text-right'>
        <button type="submit" class="btn btn-primary">Create Book</button>
      </div>
    </form>
  </div>
</div>
